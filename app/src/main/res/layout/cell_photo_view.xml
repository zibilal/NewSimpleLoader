<?xml version="1.0" encoding="utf-8"?>
    
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center">
    <com.zibilal.newsimpleloader.app.widget.TouchImageView
        android:id="@+id/photo_view"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/default_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ProgressBar
        android:id="@+id/photo_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_description"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/neque_porro"
        android:padding="8dp"
        android:paddingBottom="12dp"
        android:background="@drawable/bg_title"
        android:layout_alignBottom="@+id/photo_view"
        android:layout_alignRight="@+id/photo_view"
        android:layout_alignEnd="@+id/photo_view"
        android:layout_alignLeft="@+id/photo_view"
        android:layout_alignStart="@+id/photo_view" />
</RelativeLayout>
    
